  <script>
    // --- JAVASCRIPT PARA COMUNICA√á√ÉO EXTERNA ---
    
    // ** IMPORTANTE: MUDE A URL AQUI PARA A SUA URL DE EXECU√á√ÉO RECENTEMENTE ATUALIZADA **
    const WEB_APP_URL = 'https://script.google.com/macros/s/AKfycbxSvhTjoYoVlNRTSimodbdpY70FIQz0Jow6TDCf5N9_z0KoJW8vRGcgzOz-JVttRtZuwg/exec';
    
    // Estado da aplica√ß√£o (O resto do c√≥digo mant√©m a mesma estrutura)
    let currentData = {
      investments: [],
      headers: [],
      summary: {}
    };
    
    // Inicializa√ß√£o
    document.addEventListener('DOMContentLoaded', function() {
      loadInitialData();
      setupEventListeners();
    });
    
    function setupEventListeners() {
      document.getElementById('investmentForm').addEventListener('submit', handleFormSubmit);
      
      // Auto-formata√ß√£o de inputs num√©ricos
      const numberInputs = document.querySelectorAll('input[type="number"]');
      numberInputs.forEach(input => {
        input.addEventListener('blur', function() {
          if (this.value) {
            // Garante 2 casas decimais e substitui v√≠rgula por ponto (padr√£o)
            let formattedValue = parseFloat(this.value).toFixed(2);
            this.value = formattedValue;
          }
        });
      });
    }
    
    // -------------------------------------------------------------
    // FUN√á√ÉO PRINCIPAL DE COMUNICA√á√ÉO COM O APPS SCRIPT (API)
    // -------------------------------------------------------------

    /**
     * Envia requisi√ß√£o POST para o Apps Script com a a√ß√£o e o payload.
     */
    async function callAppsScript(action, payload = {}) {
        try {
            const response = await fetch(WEB_APP_URL, {
                method: 'POST',
                mode: 'cors', 
                headers: {
                    // O Apps Script espera 'text/plain' para requisi√ß√µes POST externas
                    'Content-Type': 'text/plain;charset=utf-8' 
                },
                body: JSON.stringify({
                    action: action,
                    payload: payload
                })
            });

            // Se o status da resposta for OK (200), lemos o conte√∫do JSON
            if (response.ok) {
              const text = await response.text();
              return JSON.parse(text);
            } else {
              // Lidar com erros HTTP (404, 500, etc.)
              const errorText = await response.text();
              throw new Error(`Erro HTTP ${response.status}: ${errorText.substring(0, 100)}`);
            }

        } catch (error) {
            console.error("Erro na comunica√ß√£o com Apps Script:", error);
            // Rejeita a promessa para ser capturada pelo .catch() do loadInitialData
            throw new Error("Falha na comunica√ß√£o: " + error.message);
        }
    }


    // -------------------------------------------------------------
    // FUN√á√ïES DE CARREGAMENTO E ATUALIZA√á√ÉO
    // -------------------------------------------------------------

    function loadInitialData() {
        callAppsScript('GET_DATA')
            .then(displayData)
            .catch(displayError);
    }
    
    function refreshData() {
      showLoadingState();
      loadInitialData();
    }
    
    function showLoadingState() {
      const contentDiv = document.getElementById('content');
      contentDiv.innerHTML = `
        <div class="loading">
          <div class="spinner"></div>
          <div>Atualizando dados...</div>
        </div>
      `;
    }
    
    // -------------------------------------------------------------
    // FORMATA√á√ÉO E C√ÅLCULOS (Manter as fun√ß√µes originais)
    // -------------------------------------------------------------
    
    function formatCurrency(value) {
      if (value === null || value === undefined || isNaN(value)) {
        return 'R$ 0,00';
      }
      const numValue = Number(value);
      return numValue.toLocaleString('pt-BR', {
        style: 'currency',
        currency: 'BRL',
        minimumFractionDigits: 2
      });
    }
    
    function formatPercentage(value) {
      if (value === null || value === undefined || isNaN(value)) {
        return '0%';
      }
      // Garante que o valor exibido na rentabilidade use a cor correta
      const color = Number(value) >= 0 ? 'var(--success-color)' : 'var(--danger-color)';
      return `<span style="color: ${color};">${Number(value).toFixed(2)}%</span>`;
    }
    
    function calculateSummary(data) {
      let totalInvestido = 0;
      let rendaMensal = 0;
      let patrimonio = 0;
      
      data.forEach(item => {
        const invested = Number(item['Valor Investido']) || 0;
        const currentValue = Number(item['Valor Atual']) || invested;
        const monthlyIncome = Number(item['Renda Recorrente Mensal']) || 0;
        
        totalInvestido += invested;
        rendaMensal += monthlyIncome;
        patrimonio += currentValue;
      });
      
      const rentabilidade = totalInvestido > 0 
        ? ((patrimonio - totalInvestido) / totalInvestido) * 100 
        : 0;
      
      const yieldMedio = patrimonio > 0 
        ? (rendaMensal / patrimonio) * 100 
        : 0;
      
      return {
        totalInvestido,
        rendaMensal,
        patrimonio,
        rentabilidade,
        yieldMedio,
        totalAtivos: data.length
      };
    }
    
    // -------------------------------------------------------------
    // DISPLAY DE DADOS
    // -------------------------------------------------------------
    
    function displayData(response) {
      // Se a resposta vier com sucesso: false, trata como erro
      if (!response.success) {
        displayError({ message: response.message || "Erro desconhecido ao carregar dados." });
        return;
      }
      
      currentData.investments = response.data;
      currentData.headers = response.headers;
      currentData.summary = calculateSummary(response.data);
      
      updateSummaryCards();
      updateStatsRow();
      renderTable();
    }
    
    function updateSummaryCards() {
      const summary = currentData.summary;
      
      document.getElementById('totalInvestido').textContent = formatCurrency(summary.totalInvestido);
      document.getElementById('rendaMensal').textContent = formatCurrency(summary.rendaMensal);
      document.getElementById('patrimonio').textContent = formatCurrency(summary.patrimonio);
    }
    
    function updateStatsRow() {
      const summary = currentData.summary;
      
      document.getElementById('rentabilidadeTotal').innerHTML = formatPercentage(summary.rentabilidade);
      document.getElementById('yieldMedio').textContent = formatPercentage(summary.yieldMedio).replace(/<[^>]*>?/gm, ''); // Remove span de cor, mantendo s√≥ o texto
      document.getElementById('totalAtivos').textContent = summary.totalAtivos;
    }
    
    function renderTable() {
      const contentDiv = document.getElementById('content');
      const data = currentData.investments;
      const headers = currentData.headers;
      
      if (data.length === 0) {
        contentDiv.innerHTML = `
          <div class="table-container">
            <table>
              <thead>
                <tr>${headers.map(h => `<th>${h}</th>`).join('')}</tr>
              </thead>
              <tbody>
                <tr>
                  <td colspan="${headers.length}" style="text-align:center; padding: 40px;">
                    üìä Nenhum registro de investimento encontrado. Adicione seu primeiro registro acima!
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        `;
        return;
      }
      
      let htmlTable = `
        <div class="table-container">
          <table>
            <thead>
              <tr>${headers.map(h => `<th>${h}</th>`).join('')}</tr>
            </thead>
            <tbody>
      `;
      
      data.forEach(item => {
        htmlTable += '<tr>';
        headers.forEach(header => {
          let value = item[header];
          
          if (header.includes('Valor') || header.includes('Renda') || header.includes('Pre√ßo')) {
            value = formatCurrency(value);
          }
          
          htmlTable += `<td>${value || '-'}</td>`;
        });
        htmlTable += '</tr>';
      });
      
      htmlTable += '</tbody></table></div>';
      contentDiv.innerHTML = htmlTable;
    }
    
    function displayError(error) {
      const contentDiv = document.getElementById('content');
      contentDiv.innerHTML = `
        <div class="error">
          ‚ùå Ocorreu um erro ao carregar os dados: ${error.message || error}
        </div>
      `;
      
      document.getElementById('totalInvestido').textContent = 'R$ 0,00';
      document.getElementById('rendaMensal').textContent = 'R$ 0,00';
      document.getElementById('patrimonio').textContent = 'R$ 0,00';
    }
    
    // -------------------------------------------------------------
    // FORMUL√ÅRIO DE ESCRITA
    // -------------------------------------------------------------
    
    async function handleFormSubmit(event) {
      event.preventDefault();
      
      const form = event.target;
      const formData = {};
      
      Array.from(form.elements).forEach(element => {
        if (element.name) {
          // Usa o valor limpo
          let value = element.value;
          
          // Se for campo num√©rico, remove formata√ß√£o de milhar e usa ponto decimal
          if (element.type === 'number') {
            value = value.replace(/\./g, '').replace(',', '.');
          }
          formData[element.name] = value;
        }
      });
      
      if (!validateFormData(formData)) {
        return;
      }
      
      const submitButton = form.querySelector('button[type="submit"]');
      const messageDiv = document.getElementById('formMessage');
      
      submitButton.disabled = true;
      messageDiv.classList.remove('hidden', 'message-success', 'message-error');
      messageDiv.className = 'message-loading';
      messageDiv.textContent = '‚è≥ Adicionando registro na planilha...';
      
      // CHAMA O APPS SCRIPT COM A√á√ÉO 'ADD_RECORD'
      const response = await callAppsScript('ADD_RECORD', formData);

      submitButton.disabled = false;
      
      if (response.success) {
        messageDiv.className = 'message-success';
        messageDiv.textContent = '‚úÖ ' + response.message;
        form.reset();
        
        // Recarrega os dados ap√≥s sucesso
        setTimeout(() => {
          loadInitialData();
        }, 500);
        
        setTimeout(() => {
          messageDiv.classList.add('hidden');
        }, 5000);
      } else {
        messageDiv.className = 'message-error';
        messageDiv.textContent = '‚ùå ' + (response.message || 'Erro desconhecido ao adicionar registro.');
      }
    }
    
    function validateFormData(data) {
      const messageDiv = document.getElementById('formMessage');
      
      if (!data['Ativo'] || data['Ativo'].trim() === '') {
        messageDiv.classList.remove('hidden');
        messageDiv.className = 'message-error';
        messageDiv.textContent = '‚ùå O nome do ativo √© obrigat√≥rio!';
        return false;
      }
      
      return true;
    }
</script>
</body>
</html>
